<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp" >

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ebebeb"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/lbl_attendance_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_avatar"
        android:text="Mokhamad Syamsul Latif Imam H."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="0dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_attendance_user_idnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_attendance_user_name"
        android:layout_toRightOf="@+id/img_avatar"
        android:text="#########"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lbl_attendance_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lbl_attendance_user_idnumber"
        android:text="Time Info"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="7dp" />

</RelativeLayout>
