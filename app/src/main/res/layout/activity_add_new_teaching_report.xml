<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewTeachingReportActivity" >

    <TextView
        android:id="@+id/txt_course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Judul Mata Kuliah yang Bisa Jadi Agak Panjang"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="40dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <EditText
        android:id="@+id/txt_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_course_title"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_course_title"
        android:ems="10"
        android:hint="Topik Pengajaran" />

    <EditText
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_subject"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_subject"
        android:ems="10"
        android:hint="Ringkasan Pengajaran Pada Pertemuan Ini"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

</RelativeLayout>
